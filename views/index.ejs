<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Text Comparison Tool</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
  <div class="container my-5">
    <h1 class="mb-4 text-center">Text Comparison Tool</h1>

    <form action="/compare" method="POST" enctype="multipart/form-data">
      <div class="row mb-3">
        <div class="col-md-6">
          <label for="text1" class="form-label">Enter Text 1</label>
          <textarea class="form-control" id="text1" name="text1" rows="8" placeholder="Paste or type text here..."></textarea>
        </div>
        <div class="col-md-6">
          <label for="text2" class="form-label">Enter Text 2</label>
          <textarea class="form-control" id="text2" name="text2" rows="8" placeholder="Paste or type text here..."></textarea>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-md-6">
          <label for="file1" class="form-label">Or Upload File 1</label>
          <input class="form-control" type="file" id="file1" name="file1" accept=".txt" />
        </div>
        <div class="col-md-6">
          <label for="file2" class="form-label">Or Upload File 2</label>
          <input class="form-control" type="file" id="file2" name="file2" accept=".txt" />
        </div>
      </div>

      <button type="submit" class="btn btn-primary w-100">Compare</button>
    </form>
    
    <% if (error) { %>
        <div class="alert alert-danger mt-3"><%= error %></div>
      <% } %>
      <% if (similarity) { %>
        <div class="alert alert-info mt-3">
          Similarity: <strong><%= similarity %></strong>
        </div>
      <% } %> 
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
